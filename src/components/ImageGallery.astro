---
// Image Gallery - galeria dodatkowych zdjęć dla strony "O mnie"
// Grid 3 kolumny (lg+), 2 kolumny (tablet), 1 kolumna (mobile)
import { AnimatedSection } from './AnimatedSection';

const galleryImages = [
  {
    title: "Gabinet w Gaju",
    description: "Przyjmuję w gabinecie w Gaju k. Brzezin w województwie łódzkim",
    image: "https://images.unsplash.com/photo-1519494026892-80bbd2d6fd0d?w=800&q=80",
    alt: "Nowoczesny gabinet dietetyczny",
    delay: 100
  },
  {
    title: "Konsultacje online",
    description: "Przeprowadzam konsultacje online w wygodnym dla Ciebie terminie i miejscu",
    image: "https://images.unsplash.com/photo-1588196749597-9ff075ee6b5b?w=800&q=80",
    alt: "Konsultacja online przez wideorozmowę",
    delay: 200
  },
  {
    title: "Przygotowywanie indywidualnych planów żywieniowych",
    description: "Spersonalizowane plany dopasowane do Twoich potrzeb",
    image: "https://images.unsplash.com/photo-1490645935967-10de6ba17061?w=800&q=80",
    alt: "Świeże warzywa i planowanie posiłków",
    delay: 300
  }
];
---

<section class="bg-white py-16 md:py-24">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Nagłówek sekcji -->
    <div class="text-center mb-12 space-y-4">
      <h2 class="font-heading font-bold text-3xl md:text-4xl text-neutral-dark">
        Zobacz jak pracuję
      </h2>
      <p class="font-body text-lg text-neutral-dark/70 max-w-2xl mx-auto">
        Przyjmuję w gabinecie w Gaju oraz przeprowadzam konsultacje online
      </p>
    </div>

    <!-- Grid galerii -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {galleryImages.map((image) => (
        <AnimatedSection client:load delay={image.delay}>
          <div class="group relative">
            <!-- Karta zdjęcia -->
            <div class="relative w-full aspect-[4/3] rounded-xl overflow-hidden shadow-soft hover:shadow-soft-lg transition-shadow duration-300">
              <!-- Zdjęcie -->
              <img
                src={image.image}
                alt={image.alt}
                class="w-full h-full object-cover"
                loading="lazy"
              />

              <!-- Decorative overlay on hover -->
              <div class="absolute inset-0 bg-gradient-to-t from-primary/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </div>

            <!-- Opis pod zdjęciem -->
            <div class="mt-4 space-y-1 text-center">
              <h3 class="font-heading font-semibold text-lg text-neutral-dark">
                {image.title}
              </h3>
              <p class="font-body text-sm text-neutral-dark/70">
                {image.description}
              </p>
            </div>
          </div>
        </AnimatedSection>
      ))}
    </div>
  </div>
</section>
