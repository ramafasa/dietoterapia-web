---
// Hero Section dla strony głównej zgodnie z PRD
import { AnimatedSection } from './AnimatedSection';
---

<section class="relative bg-gradient-to-br from-neutral-light via-white to-secondary/10 py-20 lg:py-32">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Lewa kolumna: Tekst i CTA -->
      <AnimatedSection client:load delay={100}>
      <div class="space-y-6 lg:pr-8">
        <!-- Badge -->
        <div class="inline-flex items-center px-4 py-2 bg-primary/10 rounded-full">
          <span class="font-body text-sm font-semibold text-primary">
            Dietetyk kliniczna
          </span>
        </div>

        <!-- Główny nagłówek -->
        <h1 class="font-heading font-bold text-4xl sm:text-5xl lg:text-6xl text-neutral-dark leading-tight">
          Paulina Maciak
        </h1>

        <!-- Krótkie bio (placeholder Lorem Ipsum) -->
        <p class="font-body text-lg text-neutral-dark/80 leading-relaxed">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Specjalizuję się w dietoterapii klinicznej, wspierając pacjentów w walce z chorobami metabolicznymi, zaburzeniami hormonalnymi oraz w procesie zdrowej redukcji masy ciała. Moje podejście opiera się na indywidualnym wsparciu i trwałej zmianie nawyków żywieniowych.
        </p>

        <!-- CTA Button -->
        <div class="pt-4">
          <a
            href="/konsultacje#formularz"
            class="inline-flex items-center px-8 py-4 bg-accent text-white font-body font-semibold text-lg rounded-xl hover:scale-105 hover:shadow-soft-lg transition-all duration-200"
          >
            Umów konsultację
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>

        <!-- Trust indicators -->
        <div class="pt-8 flex flex-wrap gap-6 items-center">
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            <span class="font-body text-sm text-neutral-dark/70">Certyfikowany dietetyk kliniczny</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="font-body text-sm text-neutral-dark/70">Konsultacje online i stacjonarne</span>
          </div>
        </div>
      </div>
      </AnimatedSection>

      <!-- Prawa kolumna: Zdjęcie -->
      <AnimatedSection client:load delay={300}>
      <div class="relative">
        <div class="relative w-full aspect-square lg:aspect-[4/5] rounded-2xl overflow-hidden shadow-soft-lg bg-gradient-to-br from-primary/20 to-secondary/30">
          <!-- Placeholder image - do zastąpienia prawdziwym zdjęciem Pauliny -->
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center p-8">
              <svg class="w-24 h-24 mx-auto text-primary/40 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <p class="font-body text-sm text-neutral-dark/60">
                Placeholder dla zdjęcia portretowego<br />
                Pauliny Maciak
              </p>
            </div>
          </div>

          <!-- Decorative elements -->
          <div class="absolute -top-4 -right-4 w-24 h-24 bg-accent/20 rounded-full blur-2xl"></div>
          <div class="absolute -bottom-4 -left-4 w-32 h-32 bg-primary/20 rounded-full blur-2xl"></div>
        </div>

        <!-- Floating badge -->
        <div class="absolute -bottom-6 left-1/2 transform -translate-x-1/2 bg-white px-6 py-4 rounded-xl shadow-soft-lg">
          <p class="font-body text-sm text-neutral-dark/80 text-center">
            <span class="font-semibold text-primary">Ponad 150+</span> zadowolonych pacjentów
          </p>
        </div>
      </div>
      </AnimatedSection>
    </div>
  </div>

  <!-- Background decorative elements -->
  <div class="absolute top-1/4 left-0 w-64 h-64 bg-primary/5 rounded-full blur-3xl -z-10"></div>
  <div class="absolute bottom-1/4 right-0 w-96 h-96 bg-secondary/10 rounded-full blur-3xl -z-10"></div>
</section>
