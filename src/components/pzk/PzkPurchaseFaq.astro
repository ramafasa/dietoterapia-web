---
/**
 * PZK Purchase FAQ Component
 *
 * Minimal FAQ to reduce doubts (e.g., "Do I need an account?", "How long do I have access?").
 * Uses <details>/<summary> for accessibility without JS.
 */

import type { PzkFaqItemVM } from '@/types/pzk-dto'

interface Props {
  items: PzkFaqItemVM[]
}

const { items } = Astro.props
---

{items && items.length > 0 && (
  <section class="section">
    <div class="container-custom">
      <h2 class="text-3xl md:text-4xl font-heading font-bold text-neutral-dark text-center mb-12">
        Najczęściej zadawane pytania
      </h2>

      <div class="max-w-3xl mx-auto space-y-4">
        {items.map((item) => (
          <details class="card p-6 group">
            <summary class="font-semibold text-neutral-dark cursor-pointer list-none flex justify-between items-center">
              <span>{item.question}</span>
              <svg
                class="w-5 h-5 text-primary transition-transform group-open:rotate-180"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"
                />
              </svg>
            </summary>
            <div class="mt-4 text-neutral-dark/80" set:html={item.answerMd} />
          </details>
        ))}
      </div>
    </div>
  </section>
)}
