---
/**
 * PzkPurchaseTestimonials Component
 *
 * Displays testimonials from pilot edition participants.
 * Positioned after "PzkPurchaseAbout" section, before "Bundle Card".
 */
import { AnimatedSection } from '../AnimatedSection';
import { Image } from 'astro:assets';
import opinia1 from '../../assets/images/testimonials/opinia1.jpeg';
import opinia2 from '../../assets/images/testimonials/opinia2.jpeg';
import opinia3 from '../../assets/images/testimonials/opinia3.jpeg';
import opinia4 from '../../assets/images/testimonials/opinia4.jpeg';
import opinia6 from '../../assets/images/testimonials/opinia6.jpeg';

const testimonials = [
  { src: opinia1, alt: 'Opinia uczestniczki programu Przestrzeń Zdrowej Kobiety - opinia 1' },
  { src: opinia3, alt: 'Opinia uczestniczki programu Przestrzeń Zdrowej Kobiety - opinia 3' },
  { src: opinia2, alt: 'Opinia uczestniczki programu Przestrzeń Zdrowej Kobiety - opinia 2' },
  { src: opinia4, alt: 'Opinia uczestniczki programu Przestrzeń Zdrowej Kobiety - opinia 4' },
  { src: opinia6, alt: 'Opinia uczestniczki programu Przestrzeń Zdrowej Kobiety - opinia 6' },
];
---

<section class="section bg-white">
  <div class="container-custom">
    <div class="max-w-6xl mx-auto">
      <!-- Section title -->
      <AnimatedSection client:load delay={100}>
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-neutral-dark text-center mb-6">
          Co mówią kobiety, które brały udział w programie?
        </h2>
      </AnimatedSection>

      <!-- Disclaimer -->
      <AnimatedSection client:load delay={200}>
        <div class="max-w-3xl mx-auto mb-12">
          <div class="bg-white border-2 border-primary/20 rounded-xl p-6 text-center">
            <p class="text-neutral-dark/80 font-body leading-relaxed">
              Obecna edycja Przestrzeni Zdrowej Kobiety jest pierwszą edycją w tej formule.
            </p>
            <p class="text-neutral-dark/80 font-body leading-relaxed mt-2">
              Opinie pochodzą z wcześniejszej, pilotażowej edycji programu.
            </p>
          </div>
        </div>
      </AnimatedSection>

      <!-- Testimonials grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {testimonials.map((testimonial, index) => (
          <AnimatedSection client:load delay={300 + index * 100}>
            <figure class="testimonial-card group max-w-[70%] mx-auto">
              <div class="relative overflow-hidden rounded-xl shadow-soft-lg transition-all duration-300 group-hover:shadow-xl group-hover:scale-[1.02]">
                <Image
                  src={testimonial.src}
                  alt={testimonial.alt}
                  widths={[640, 768, 1024]}
                  formats={['avif', 'webp', 'jpg']}
                  loading="lazy"
                  class="w-full h-auto"
                />
              </div>
            </figure>
          </AnimatedSection>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .shadow-soft-lg {
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
  }
</style>
