---
/**
 * Signup Page (Patient Registration)
 * Route: /auth/signup?token={invitation_token}
 *
 * Public page - validates invitation token via SSR
 * Renders SignupForm island with email from validated invitation
 */

import Layout from '@/layouts/Layout.astro'
import SignupForm from '@/components/SignupForm'
import type { ValidateInvitationResponse } from '@/types'

export const prerender = false

// Get token from query string
const token = Astro.url.searchParams.get('token')

// Validate token presence
if (!token) {
  return Astro.redirect('/auth/invitation-invalid?reason=missing')
}

// Validate token via API endpoint
let invitationData: ValidateInvitationResponse | null = null
let validationError: string | null = null

try {
  const apiUrl = new URL(`/api/invitations/${token}`, Astro.url.origin)
  const response = await fetch(apiUrl.toString())

  if (response.ok) {
    invitationData = await response.json()
  } else {
    // Handle different error scenarios
    if (response.status === 404) {
      validationError = 'not_found'
    } else if (response.status === 400) {
      validationError = 'expired_or_used'
    } else {
      validationError = 'server_error'
    }
  }
} catch (error) {
  console.error('Error validating invitation token:', error)
  validationError = 'server_error'
}

// SEO metadata
const title = 'Rejestracja | Dietoterapia - Paulina Maciak'
const description = 'Utwórz konto w systemie śledzenia wagi'
---

<Layout title={title} description={description}>
  <section class="min-h-screen bg-neutral-light py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-3xl font-heading font-bold text-neutral-dark mb-2">
          Załóż konto
        </h1>
        <p class="text-neutral-dark/70">
          Wypełnij formularz, aby rozpocząć współpracę
        </p>
      </div>

      <!-- Error state: Invalid/expired token -->
      {validationError && (
        <div class="mb-6">
          {validationError === 'not_found' && (
            <div class="border rounded-lg p-4 flex items-start gap-3 bg-red-50 border-red-200 text-red-800" role="alert">
              <div class="flex-shrink-0 text-red-600">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium">Zaproszenie nie zostało znalezione. Upewnij się, że link jest poprawny.</p>
                <a href="/kontakt" class="mt-2 inline-block text-sm font-semibold underline hover:no-underline focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                  Skontaktuj się z dietetykiem
                </a>
              </div>
            </div>
          )}

          {validationError === 'expired_or_used' && (
            <div class="border rounded-lg p-4 flex items-start gap-3 bg-yellow-50 border-yellow-200 text-yellow-800" role="alert">
              <div class="flex-shrink-0 text-yellow-600">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium">To zaproszenie wygasło lub zostało już wykorzystane. Poproś dietetyka o nowe zaproszenie.</p>
                <a href="/kontakt" class="mt-2 inline-block text-sm font-semibold underline hover:no-underline focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                  Skontaktuj się z dietetykiem
                </a>
              </div>
            </div>
          )}

          {validationError === 'server_error' && (
            <div class="border rounded-lg p-4 flex items-start gap-3 bg-red-50 border-red-200 text-red-800" role="alert">
              <div class="flex-shrink-0 text-red-600">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium">Wystąpił błąd podczas sprawdzania zaproszenia. Spróbuj ponownie później.</p>
                <button onclick="window.location.reload()" class="mt-2 text-sm font-semibold underline hover:no-underline focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                  Odśwież stronę
                </button>
              </div>
            </div>
          )}
        </div>
      )}

      <!-- Success state: Valid token - render form -->
      {invitationData && invitationData.valid && (
        <SignupForm
          client:load
          token={token}
          email={invitationData.email}
          expiresAt={invitationData.expiresAt}
        />
      )}
    </div>
  </section>
</Layout>
