---
import Layout from '@/layouts/Layout.astro'
import PasswordResetConfirmForm from '@/components/PasswordResetConfirmForm'

const { token } = Astro.params

if (!token) {
  return Astro.redirect('/reset-hasla')
}
---

<Layout
  title="Ustaw nowe hasło - Dietoterapia"
  description="Ustaw nowe hasło do aplikacji Dietoterapia"
>
  <main class="min-h-screen bg-neutral-light py-16">
    <div class="container mx-auto px-4 max-w-md">
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-3xl font-heading font-bold text-neutral-dark mb-2 text-center">
          Ustaw nowe hasło
        </h1>
        <p class="text-center text-gray-600 mb-6">
          Wprowadź nowe hasło dla swojego konta
        </p>

        <PasswordResetConfirmForm token={token} client:load />
      </div>
    </div>
  </main>
</Layout>
