# ============================================================================
# Environment Variables - Example Configuration
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# .env.local is gitignored and should never be committed

# ============================================================================
# Feature Flags
# ============================================================================

# Controls visibility of patient zone features
# When false (default): "Strefa pacjenta" button hidden, /logowanie returns 404
# When true: Patient zone fully accessible
FF_STREFA_PACJENTA=false

# ============================================================================
# SMTP Configuration (OVH MX Plan)
# ============================================================================

SMTP_HOST=ssl0.ovh.net
SMTP_PORT=465
SMTP_USER=dietoterapia@paulinamaciak.pl
SMTP_PASS=your_smtp_password_here
CONTACT_EMAIL=dietoterapia@paulinamaciak.pl
SITE_URL=https://paulinamaciak.pl

# ============================================================================
# reCAPTCHA v3 (Contact Forms)
# ============================================================================
# Generate keys at: https://www.google.com/recaptcha/admin

PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# ============================================================================
# Database (Neon Postgres)
# ============================================================================
# Get from: https://console.neon.tech

DATABASE_URL=postgresql://user:pass@ep-xxx.eu-central-1.aws.neon.tech/dbname?sslmode=require

# ============================================================================
# Authentication (Lucia)
# ============================================================================
# Generate with: openssl rand -base64 32

SESSION_SECRET=your_session_secret_here

# ============================================================================
# Web Push (VAPID Keys)
# ============================================================================
# Generate with: npx web-push generate-vapid-keys

VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:dietoterapia@paulinamaciak.pl

# ============================================================================
# PZK (Przestrzeń Zdrowej Kobiety) - Purchase CTA
# ============================================================================
# Base URL for purchase landing page (where patients can buy module access)
# Default: https://example.com/pzk (fallback for dev/test)

PUBLIC_PZK_PURCHASE_CTA_BASE_URL=https://example.com/pzk

# Query parameter name for module number (1, 2, or 3)
# Default: module
# Example: https://example.com/pzk?module=1

PUBLIC_PZK_PURCHASE_CTA_PARAM_NAME=module

# PZK (Przestrzeń Zdrowej Kobiety) - Purchase CTA
PUBLIC_PZK_PURCHASE_CTA_BASE_URL=https://example.com/pzk
PUBLIC_PZK_PURCHASE_CTA_PARAM_NAME=module
