# SMTP Configuration (OVH MX Plan)
SMTP_HOST=ssl0.ovh.net
SMTP_PORT=465
SMTP_USER=dietoterapia@paulinamaciak.pl
SMTP_PASS=your_password_here
CONTACT_EMAIL=dietoterapia@paulinamaciak.pl
SITE_URL=https://paulinamaciak.pl

# Google Analytics 4
# Get your Measurement ID from Google Analytics Admin > Data Streams
# Format: G-XXXXXXXXXX
PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ===== DATABASE =====
# Neon PostgreSQL connection string
# Get from: https://console.neon.tech (region: eu-central-1 Frankfurt)
# Format: postgresql://user:password@ep-xxx.eu-central-1.aws.neon.tech/dbname?sslmode=require
DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# ===== AUTHENTICATION =====
# Session secret for Lucia Auth (generate: openssl rand -base64 32)
SESSION_SECRET=your_session_secret_here

# ===== WEB PUSH NOTIFICATIONS =====
# VAPID keys for web push (generate: npx web-push generate-vapid-keys)
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:dietoterapia@paulinamaciak.pl

# ===== RATE LIMITING =====
# Upstash Redis credentials
# Get from: https://console.upstash.com (region: eu-west-1 Ireland)
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# ===== CRON JOBS (QSTASH) =====
# Upstash QStash signing keys
# Get from: https://console.upstash.com/qstash
QSTASH_CURRENT_SIGNING_KEY=your_qstash_current_signing_key_here
QSTASH_NEXT_SIGNING_KEY=your_qstash_next_signing_key_here
